        <!--app:bmb_buttonEnum="ham"-->
        <!--app:bmb_buttonPlaceEnum="buttonPlace_ham_2"-->
        <!--app:bmb_piecePlaceEnum="piecePlace_ham_2" />-->
    </androidx.cardview.widget.CardView>
</FrameLayout>